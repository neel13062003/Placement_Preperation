@page
@model Tuesday1.Pages.IndexModel
@{
    ViewData["Title"] = "Home Page";
}

<h1>Welcome to the ASP.NET Web Application!</h1>

<div>
    <label for="nameInput">Enter your name:</label>
    <input type="text" id="nameInput" />
    <button id="showButton">Show Name</button>
</div>

<div id="nameOutput" style="margin-top: 10px; display: none;">
    <p>Hello, <span id="outputName"></span>!</p>
</div>

@section Scripts {
<script>
        document.getElementById("showButton").addEventListener("click", function () {
            var name = document.getElementById("nameInput").value;
            document.getElementById("outputName").innerText = name;
            document.getElementById("nameOutput").style.display = "block";
        });
</script>
}
